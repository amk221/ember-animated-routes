{{#let
  (component this.componentName
    model=this.renderTask.attributes
    __renderTask__=this.renderTask
  )
  as |RouteComponent|
}}
  {{#if hasBlock}}

    {{yield (hash
      inDOM=this.renderTask.inDOM
      isActive=this.isActive
      component=RouteComponent
      __renderTask__=this.renderTask
    )}}

  {{else if this.renderTask.inDOM}}

    <RouteComponent ...args />

  {{/if}}
{{/let}}
